[
  {
    "comment": "Extract all task entries into an array",
    "operation": "shift",
    "spec": {
      "data": {
        "total": "totalTasks",
        "entry": {
          "*": {
            "resource": {
              "id": "tasks[&2].taskId",
              "status": "tasks[&2].status",
              "priority": "tasks[&2].priority",
              "authoredOn": "tasks[&2].authoredOn",
              "groupIdentifier": {
                "value": "tasks[&3].orderId"
              },
              "for": {
                "reference": "tasks[&3].patientRef"
              },
              "requester": {
                "reference": "tasks[&3].requesterRef"
              },
              "owner": {
                "reference": "tasks[&3].organizationRef"
              }
            }
          }
        }
      }
    }
  }
]
